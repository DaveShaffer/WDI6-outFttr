<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body style="background-color:#f05f40;" id="page-top">
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/">HOME</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="page-scroll" href="/items">My Closet</a></li>
                    <li><a class="page-scroll" href="/outfits">My Outfits</a></li>
                    <% if (currentUser) { %>
                      <li><a class= "page-scroll" href="/users/<%= currentUser.id %>"><%= currentUser.local.email %></a></li>
                      <li><a href="/logout">Log Out</a></li>
                    <% } else { %>
                        <li><a class="page-scroll" href="/login">Log In</a></li>
                    <% } %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div>
      <h3><b>Name: </b><%= outfit.name %></h3>
      <ul>
      <% items.forEach(function(item) { %>
        <img src="<%= item.avatar_url %>" width="225px">
      <% }) %>
      </ul>

    <a href="/outfits" class="btn btn-default">Back</a> <br>
    <a href="/outfits/<%= outfit._id %>/edit" class="btn btn-danger">Edit</a>
    <form method="POST" action="/outfits/<%= outfits._id %>?_method=DELETE"><button type="submit" class="btn btn-default">Delete</button>
    </div>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
